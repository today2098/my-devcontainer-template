// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "my-devcontainer-template",
	// Or use a Dockerfile. More info: https://containers.dev/guide/dockerfile.
	"dockerComposeFile": [
		"compose.yaml",
		"compose.mysql.yaml"
	],
	"service": "devcontainer",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/devcontainers/features/java:1": {
			"version": 21,
			"jdkDistro": "tem",
			"installMaven": true
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"files.associations": {
					"*.env": "properties",
					"*.env.template": "properties"
				},
				"java.configuration.updateBuildConfiguration": "automatic",
				"java.jdt.ls.java.home": "/usr/local/sdkman/candidates/java/current",
				"sqltools.connections": [
					{
						"group": "local",
						"name": "root",
						"driver": "MySQL",
						"server": "mysql",
						"port": 3306,
						"database": "mysql",
						"username": "root",
						"password": "${containerEnv:MYSQL_ROOT_PASSWORD}",
						"previewLimit": 1000
					},
					{
						"group": "local",
						"name": "${containerEnv:MYSQL_USER}",
						"driver": "MySQL",
						"server": "mysql",
						"port": 3306,
						"database": "${containerEnv:MYSQL_DATABASE:-mysql}",
						"username": "${containerEnv:MYSQL_USER}",
						"password": "${containerEnv:MYSQL_PASSWORD}",
						"previewLimit": 1000
					}
				],
				"sqltools.sessionFilesFolder": "tmp/sqltools",
				"database-client.defaultSelectLimit": 1000,
				"database-client.capitalizeKeywordsWhenFormatting": true,
				"database-client.enableEditorCodeLens": false,
				"database-client.telemetry.usesOnlineServices": false,
				"[sql]": {
					"editor.defaultFormatter": "cweijan.vscode-database-client2"
				}
			},
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"golang.go",
				"vscjava.vscode-java-pack",
				"vmware.vscode-boot-dev-pack",
				"mads-hartmann.bash-ide-vscode",
				"docsmsft.docs-authoring-pack",
				"bierner.github-markdown-preview",
				"redhat.vscode-xml",
				"redhat.vscode-yaml",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-mysql",
				"mtxr.sqltools-driver-sqlite",
				"cweijan.vscode-database-client2",
				"ms-azuretools.vscode-docker",
				"docker.docker",
				"mhutchie.git-graph",
				"donjayamanne.githistory",
				"eamodio.gitlens",
				"ms-vscode.hexeditor",
				"ms-vscode.live-server",
				"mechatroner.rainbow-csv",
				"janisdd.vscode-edit-csv",
				"GrapeCity.gc-excelviewer",
				"tomoki1207.pdf",
				"Postman.postman-for-vscode",
				"GitHub.vscode-github-actions",
				"cschlosser.doxdocgen"
			]
		}
	},
	"workspaceFolder": "/workspaces/yourworkspace",
	"remoteUser": "devuser",
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"updateRemoteUserUID": false
}